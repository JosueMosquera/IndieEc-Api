<link rel="stylesheet" href="/css/productCategory/productCategory.css">

<head>
    <title>Catalogos</title>
</head>

<body>
    {{#if Bands}}
    <table>
        <tr>
            <th>Band Name</th>
            <th>Date</th>
            <th>Album Name</th>
        </tr>
        {{#each Bands}}
            <tr>
                <td>{{Name}}</td>
                <td>{{Date}}</td>
                <td>{{Albums.0.Name}}</td>
            </tr>
        {{/each}}
    </table>
{{else}}
    <h3>There are no concerts coming up.</h3>
{{/if}}
</table>
</body>