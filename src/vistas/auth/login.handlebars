<link rel="stylesheet" href="/css/auth/auth.css" />
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Login</title>
</head>

<body>
  <h2 id="title">Bienvenido! Inicia Sesión</h2>
  <div id="container">
    <div id="card">
      <div id="card-body">
        <form action="/auth/login" method="POST" enctype="multipart/form-data">
          <div id="form-container">
            <label for="username" id="form-label">Usuario:</label>
            <input
              type="text"
              id="form-control"
              id="username"
              name="username"
              tabindex="1"
              required
            />
            <label for="password" id="form-label">Contraseña:</label>
            <input
              type="password"
              id="form-control"
              id="password"
              name="password"
              tabindex="1"
              required
            />
          </div>
          <button id="btn-primary" type="submit">Login</button>
          <a id="btn-register" href="/get-register">Registrarse</a>
        </form>
      </div>
    </div>
    <div id="hero">
      <img
        src="/images/undraw_web_shopping_re_owap.svg"
        alt="undraw-image"
        id="img-fluid"
      />
    </div>
  </div>
</body>